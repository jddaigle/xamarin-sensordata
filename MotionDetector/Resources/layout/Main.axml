<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    tools:actionBarNavMode="list">
    <TextView
        android:text="Accelerometer"
        android:gravity="center_horizontal"
        android:background="#aa0000"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/textView1"
        android:layout_height="match_parent"
        android:height="48dp" />
    <TextView
        android:id="@+id/accelerometer_text"
        android:layout_width="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content"
        android:text="TEXT"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp" />
    <TextView
        android:text="Gyroscope"
        android:gravity="center_horizontal"
        android:background="#aa0000"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_marginBottom="0.0dp"
        android:id="@+id/textView2" />
    <TextView
        android:id="@+id/gyroscope_text"
        android:layout_width="fill_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content"
        android:text="TEXT"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp" />
    <TextView
        android:text="Magetometer"
        android:gravity="center_horizontal"
        android:background="#aa0000"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_marginBottom="0.0dp"
        android:id="@+id/textView2" />
    <TextView
        android:text="TEXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/magnetometer_text"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:text="GeomagneticRotationVector"
        android:gravity="center_horizontal"
        android:background="#aa0000"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_marginBottom="0.0dp"
        android:id="@+id/textView2" />
    <TextView
        android:text="TEXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/geomagneticrotationvector_text"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <Button
        android:text="Pause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PauseButton" />
    <Button
        android:text="Resume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ResumeButton" />
    <Button
        android:text="Share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Share" />
</LinearLayout>